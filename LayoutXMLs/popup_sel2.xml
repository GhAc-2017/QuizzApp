
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/btonv1"
        android:text="5 Questions Test"
        android:textSize="30sp"
        android:background="#34f0d4"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/btonv2"
        android:text="10 Questions Test"
        android:textSize="30sp"
        android:background="#c724e7"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/btonv3"
        android:text="15 Questions Test"
        android:textSize="30sp"
        android:background="#92ed36"/>
</LinearLayout>